{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }} - Feed
{% endblock %}
{% block content %}
<div>
	<p>Socialize Hashtag {{ hashtag }}</p>
</div>
{% if posts is not empty %}
<div>
	Posts
	{% for singlePost in posts %}
		<div>
			<div><a href="/{{ singlePost.username }}">{{ singlePost.username }}</a></div>
			<div>
            	<img alt="post file" src="/media/{{ singlePost.mediaId }}/file" />
            </div>
            <div>
                <strong>{{ singlePost.uploadTime|date("d.m.Y") }}</strong>
            </div>
            <div>
                {{ singlePost.comment }}
            </div>
            <div>
                {% for hashtag in singlePost.hashtags %}
            		{{ hashtag.name }}
                {% endfor %}
            </div>
		</div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}